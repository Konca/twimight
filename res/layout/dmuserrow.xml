<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:orientation="horizontal" android:id="@+id/dmUserRowLayout"
	android:padding="5dp" android:background="@drawable/normal_tweet_background">

	<LinearLayout android:id="@+id/showDMUser"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_weight="7.47" android:orientation="horizontal">
		<ImageView android:id="@+id/showMDUserProfileImage"
			android:layout_height="45dp" android:layout_width="45dp"
			android:src="@drawable/default_profile" />

		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:layout_weight="7.47" android:orientation="vertical"
			android:paddingLeft="20dp">
			
				<TextView android:id="@+id/showUserRealName"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="RealName" android:textColor="@color/darkGrey"/>
				<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="\@"
					android:textStyle="bold" android:textColor="@color/darkGrey"/>
				<TextView android:id="@+id/showUserScreenName"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="ScreenName" android:textStyle="bold" android:textColor="@color/darkGrey"/>
			</LinearLayout>
			<TextView android:id="@+id/showDMText" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Last DM" android:textColor="@color/darkGrey"/>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
