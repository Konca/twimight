<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/dmUserRowLayout" android:layout_width="match_parent"
	android:layout_height="wrap_content" android:orientation="horizontal"
	android:padding="5dp">

	<LinearLayout android:id="@+id/showDM"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_weight="7.47" android:orientation="horizontal">
		<ImageView android:id="@+id/showDMProfileImage"
			android:layout_height="45dp" android:layout_width="45dp"
			android:src="@drawable/default_profile" />

		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:layout_weight="7.47" android:orientation="vertical"
			android:paddingLeft="20dp">

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<!-- placeholder for the "unposted" notification -->
				<ImageView android:id="@+id/dmToPost" android:src="@drawable/blank"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />

				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="\@"
					android:textStyle="bold" android:textColor="@color/white" />
				<TextView android:id="@+id/showDMScreenName"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="ScreenName" android:textStyle="bold"
					android:textColor="@color/darkGrey" />
				<TextView android:layout_height="wrap_content" android:id="@+id/dmCreatedAt"
					android:text="10 minutes ago" android:layout_gravity="right"
					android:gravity="right" android:layout_width="fill_parent"
					android:textColor="@color/grey" />
			</LinearLayout>

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<!-- 
				<ImageButton android:id="@+id/showDMDelete"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_gravity="right" android:layout_marginLeft="5dp"
					android:background="@color/transparent"
					android:src="@android:drawable/ic_menu_delete" />
			     -->
				<TextView android:id="@+id/showDMText"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:text="DM Text" android:textColor="@color/darkGrey"
					android:textSize="16sp" android:layout_marginBottom="6dp" />


			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
