<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical" android:id="@+id/showUsersRoot">

	<LinearLayout android:id="@+id/headerBar"
		android:layout_width="match_parent" android:orientation="horizontal"
		android:background="@drawable/top_bar_background" android:gravity="center_vertical"
		android:layout_height="50dp">
		<Button android:id="@+id/headerBarFriendsButton"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:text="Friends" android:layout_marginRight="15dp"
			android:paddingLeft="10dp" android:paddingRight="10dp"
			android:background="@drawable/header_button" />
		<Button android:id="@+id/headerBarFollowersButton"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:text="Followers" android:layout_marginRight="15dp"
			android:paddingLeft="10dp" android:paddingRight="10dp"
			android:background="@drawable/header_button" />

		<Button android:id="@+id/headerBarDisasterPeersButton"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:text="Peers"
			android:paddingLeft="10dp" android:paddingRight="10dp"
			android:background="@drawable/header_button" />


	</LinearLayout>

	<ListView
	    android:id="@+id/userList"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:divider="@color/twimightBackgroundLight"
	    android:fastScrollEnabled="true"
	    android:scrollingCache="true" />

	<TextView android:id="@+id/userListEmpty"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="No users (loading..)" android:textSize="16sp"
		android:layout_gravity="center" android:paddingTop="20dp" />

</LinearLayout>
