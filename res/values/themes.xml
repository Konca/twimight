<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Twimight" parent="android:style/Theme.Holo.Light">
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:imageButtonStyle">@style/ImageButton</item>
        <item name="android:windowBackground">@color/activityBackground</item>
        <item name="android:colorBackground">@color/twimightBackgroundLight</item>
        <item name="android:textAppearance">@style/twimightDefaultTextAppearance</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle </item>
        <item name="android:actionBarItemBackground">@drawable/action_button</item>
    </style>

    <style name="Twimight.NoActionBar" parent="android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:imageButtonStyle">@style/ImageButton</item>
        <item name="android:windowBackground">@color/activityBackground</item>
        <item name="android:colorBackground">@color/twimightBackgroundLight</item>
        <item name="android:textAppearance">@style/twimightDefaultTextAppearance</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Holo redesign -->


    <!--
    Base Theme for NormalMode and DisasterMode themes. 
    Add any properties that apply in both themes here.
    -->

    <style name="TwimightHolo" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.TwimightHolo</item>
        <item name="android:listViewStyle">@style/ListView.TwimightHolo</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_twimightholo</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabBarStyle.TwimightHolo</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_dark</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="TwimightHolo.DisasterMode">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_disastermode</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.DisastertMode</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.DisasterMode</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.DisasterMode</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.DisasterMode</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.TwimightHolo.DisastertMode</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_disastermode</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_disastermode</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.DisasterMode</item>
        <item name="android:actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
        <item name="bottomStatusBarVisibility">visible</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBar.DisasterMode</item>
        <item name="android:editTextStyle">@style/EditText.DisasterMode</item>
    </style>

    <style name="TwimightHolo.NormalMode">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_normalmode</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.NormalMode</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.NormalMode</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.NormalMode</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.NormalMode</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.TwimightHolo.NormalMode</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_normalmode</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_normalmode</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.NormalMode</item>
        <item name="android:actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
        <item name="bottomStatusBarVisibility">gone</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBar.NormalMode</item>
        <item name="android:editTextStyle">@style/EditText.NormalMode</item>
    </style>

</resources>